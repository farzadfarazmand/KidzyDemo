<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/toolbar_side_padding"
    android:paddingRight="@dimen/toolbar_side_padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbarLeftButton"
        style="@style/ToolbarButtonsStyle"
        android:layout_alignParentLeft="true"
        tools:src="@drawable/ic_search" />

    <TextView
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/toolbarRightButton"
        android:layout_toRightOf="@+id/toolbarLeftButton"
        android:gravity="center"
        android:shadowColor="@color/text_shadow"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/toolbar_title_text_size"
        android:textStyle="bold"
        tools:text="Kidzy Demo App" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbarRightButton"
        style="@style/ToolbarButtonsStyle"
        android:layout_alignParentRight="true"
        tools:src="@drawable/ic_toolbar_bookmark" />

</RelativeLayout>
