<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/userAvatarPlaceHolder"
        android:layout_width="@dimen/row_users_avatar_size"
        android:layout_height="@dimen/row_users_avatar_size"
        android:layout_margin="@dimen/md_margin_padding_size_medium"
        android:background="@drawable/bg_row_users_avatar"
        android:padding="@dimen/row_users_avatar_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titlePlaceHolder"
        android:layout_width="150dp"
        android:layout_height="@dimen/md_width_height_size_small"
        android:layout_marginLeft="@dimen/md_margin_padding_size_medium"
        android:layout_marginRight="@dimen/md_margin_padding_size_medium"
        android:layout_marginBottom="@dimen/md_margin_padding_size_small"
        android:background="@color/row_users_placeholder_color"
        app:layout_constraintBottom_toTopOf="@+id/descriptionPlaceHolder"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/userAvatarPlaceHolder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/descriptionPlaceHolder"
        android:layout_width="0dp"
        android:layout_height="@dimen/md_width_height_size_micro"
        android:layout_marginLeft="@dimen/md_margin_padding_size_medium"
        android:layout_marginRight="@dimen/md_margin_padding_size_medium"
        android:background="@color/row_users_placeholder_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/userAvatarPlaceHolder"
        app:layout_constraintTop_toBottomOf="@+id/titlePlaceHolder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/md_margin_padding_size_medium"
        android:layout_marginTop="@dimen/md_margin_padding_size_medium"
        android:layout_marginRight="@dimen/md_margin_padding_size_medium"
        android:background="@color/row_users_placeholder_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAvatarPlaceHolder" />


</androidx.constraintlayout.widget.ConstraintLayout>