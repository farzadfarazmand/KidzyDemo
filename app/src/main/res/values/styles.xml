<resources>

    <style name="ToolbarButtonsStyle">
        <item name="android:layout_width">@dimen/toolbar_button_size</item>
        <item name="android:layout_height">@dimen/toolbar_button_size</item>
        <item name="android:padding">@dimen/toolbar_button_padding</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ToolbarShadowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_shadow_height</item>
        <item name="android:background">@drawable/shadow_toolbar</item>
    </style>

    <style name="UserDetailButtonsStyle">
        <item name="android:layout_width">@dimen/user_detail_button_size</item>
        <item name="android:layout_height">@dimen/user_detail_button_size</item>
        <item name="android:padding">@dimen/user_detail_button_padding</item>
        <item name="android:layout_marginRight">@dimen/user_detail_side_margin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


</resources>